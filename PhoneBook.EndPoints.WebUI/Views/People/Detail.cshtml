@model PhoneBook.EndPoints.WebUI.Models.People.PersonDetailViewModel
@{
    ViewData["Title"] = "Detail";
}

<h1>اطلاعات مخاطب</h1>

<div class="row">
    <div class="col-md-2 ">
        @{
            var imgSrc = String.Format("data:image/gif;base64,{0}", Model.Image);
        }

        <img src="@imgSrc" height="150" width="150" class="img-thumbnail" alt="Alternate Text" />
    </div>
    <div class="col-md-10">
        <div>
            <b><label asp-for="FirstName"></label>:</b> @Model.FirstName
        </div>
        <div>
            <b><label asp-for="LastName"></label> :</b> @Model.LastName
        </div>
        <div>
            <b><label asp-for="Email"></label> :</b> @Model.Email
        </div>
        <div>
            <b><label asp-for="Address"></label> :</b> @Model.Address
        </div>
        
        <a class=" btn-sm btn-outline-primary" asp-controller="people" asp-action="Update" asp-route-id="@Model.PersonId"><i class="fa fa-edit"></i></a>
        <a class=" btn-sm btn-outline-danger" asp-controller="people" asp-action="Delete" asp-route-id="@Model.PersonId"><i class="fa fa-trash"></i></a>
    </div>

    <div class="col-12">
        <b><label asp-for="Tags"></label> :</b>
        @foreach (var tag in Model.Tags)
        {
            <a href="#" class="badge badge-primary">@tag.Title</a>
        }

    </div>


</div>
<br />



<h3><label asp-for="Phones"></label></h3>
<div class="row">

    <a class=" col-2 btn btn-outline-primary" asp-controller="people" asp-action="AddNumber" asp-route-id="@Model.PersonId" >افزودن شماره تلفن</a>
   
    <div class="table-responsive pt-2">
        <table class="table table-striped table-bordered">
            <tr>
                <th>ردیف</th>
                <th>نوع</th>
                <th>شماره</th>
            </tr>
            @{ int i = 0;}
            @foreach (var p in Model.Phones)
            {

                <tr>
                    <td>@{++i;}@i</td>
                    <td>@p.PhoneType.ToString()</td>
                    <td>@p.PhoneNumber</td>
                </tr>
            }
        </table>

    </div>
</div>